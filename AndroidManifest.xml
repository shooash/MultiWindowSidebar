<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zst.app.multiwindowsidebar"
    android:versionCode="150"
    android:versionName="1.5" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.zst.app.multiwindowsidebar.MainActivity"
            android:excludeFromRecents="true"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zst.app.multiwindowsidebar.ToggleActivity"
            android:excludeFromRecents="true"
            android:theme="@android:style/Theme.NoDisplay"
            android:label="@string/app_name_toggle" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zst.app.multiwindowsidebar.adapter.AppListActivity"
            android:excludeFromRecents="true"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <service
            android:name="com.zst.app.multiwindowsidebar.sidebar.SidebarService"
            android:icon="@drawable/ic_launcher"
            android:stopWithTask="false"
            android:label="@string/app_name" >
        </service>

        <receiver android:name="com.zst.app.multiwindowsidebar.BootReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        
        <receiver android:name="com.zst.app.multiwindowsidebar.RestartReceiver" >
            <intent-filter>
                <action android:name="com.zst.app.multiwindowsidebar.START" />
                <action android:name="com.zst.app.multiwindowsidebar.STOP" />
                <action android:name="com.zst.app.multiwindowsidebar.TOGGLE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
